<Window x:Class="LogTool.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogTool"
        mc:Ignorable="d"
        Title="About" Height="200" Width="400" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top" Height="160">
                <DockPanel DockPanel.Dock="Left" LastChildFill="False">
                    <Image x:Name="img_icon" DockPanel.Dock="Top" Source="iconDo_ow.ico" Height="100" Width="100" Margin="20" MouseRightButtonUp="img_icon_MouseRightButtonUp"></Image>
                </DockPanel>
                <TextBlock x:Name="tb_info" Margin="0, 20, 0, 0"></TextBlock>
            </DockPanel>
            <Canvas x:Name="cv_game" DockPanel.Dock="Bottom" SizeChanged="cv_game_SizeChanged"></Canvas>
        </DockPanel>
    </Grid>
</Window>
